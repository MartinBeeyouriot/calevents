{{#if isShowingModal}}
{{#modal-dialog
targetAttachment="center"
translucentOverlay=true
}}
<div>
  <div>

    <Buttonim @imgSrc="/assets/images/edit.png" @clicked={{this.editDescription}} />
    <br />
    {{ this.text }}
    Start: {{ this.startDate }}<br />
    End: {{ this.endDate }}<br />
  </div>
  <div>

  </div>
  Delete?
  <Buttonim @imgSrc="/assets/images/delete.png" @clicked={{this.delete}} />
  <div align="center">
    <button type="button" {{on "click" this.closeModal}}>Close</button>
  </div>
</div>

{{/modal-dialog}}
{{/if}}

<div style="padding-top:20px;">Move events by drag and dropping them. Select an empty space and one or multiple users to
  create an event or overlap if
  the user are different.<br />
  One user cannot have two events overlapping them! <br />
  Click on the event to edit the title and description or to see the (X) on the top right corner to delete an event.
  <br />
</div>
<div class="control" style="padding-bottom:20px;">
  <button style="margin-top:5px;"><img class="refresh-button" src="/assets/images/refresh.png" alt="submit" {{on "click"
      this.refresh }} /></button>
  <span style="color:darkred; padding-left:10px;">{{ this.error }}</span>
  <span style="color:darkgreen; padding-left:10px;">{{ this.infos }}</span>
</div>
<div {{did-insert this.registerListener}} {{will-destroy this.unregisterListener}}>Test</div>